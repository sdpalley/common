html
  head
    title= title
  body
    div
        table
            thead
                tr
                    th Key
                    th Value
            tbody
                tr
                    td Code Contract's Address
                    td
                        a(href='http://' + myHost + ':46657/get_account?address="' + codeContractAddress + '"') #{codeContractAddress}
                tr
                    td Contract's Factory Address
                    td
                        a(href='http://' + myHost + ':46657/get_account?address="' + factoryContractAddress + '"') #{factoryContractAddress}
                tr
                    td Party A's Address
                    td
                        a(href='http://' + myHost + ':46657/get_account?address="' + partyAAddress + '"') #{partyAAddress}
                tr
                    td Party B's Address
                    td
                        a(href='http://' + myHost + ':46657/get_account?address="' + partyBAddress + '"') #{partyBAddress}
                tr
                    td Contract's Length
                    td
                        a(href='http://' + myHost + ':46657/get_storage?address="' + codeContractAddress + '"' + '&key="00"') #{numberOfMonths} months
                tr
                    td Contract's IPFSHash (Local IPFS)
                    td
                        a(href='http://' + myHost + ':8080/ipfs/' + proseContractsHash) #{proseContractsHash}
                tr
                    td Contract's IPFSHash (IPFS Gateway)
                    td
                        a(href='https://gateway.ipfs.io/ipfs/' + proseContractsHash) #{proseContractsHash}
    div
        h4 Contract's Prose:
        div
            if proseContractAsHTML == ""
                object(width="100%" height="80%" type="application/pdf" data='http://' + myHost + ':8080/ipfs/' + proseContractsHash)
            else
                div !{proseContractAsHTML}
    p
        a(href='/') Go Home